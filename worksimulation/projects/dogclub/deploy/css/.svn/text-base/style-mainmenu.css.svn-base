#cssmenu ul,
#cssmenu li,
#cssmenu span,
#cssmenu a {
    font-size: 12px;
    line-height: 16px;
    color: #fff;
    font-weight: bold;
}

#cssmenu a:hover, .active {
 /* this is used inside script.js to animate menus*/
    background: #c2832d;
    padding-top: 42px;
    padding-bottom: 38px;
    color: #fff;
	text-decoration: none;
}

#cssmenu {
    height: 49px;
    width: auto;
    z-index: 100;
    margin: 0;
    float: right;
    position: relative;
}

#cssmenu:after,
#cssmenu ul:after {
    content: '';
    display: block;
    clear: both;
}

#cssmenu a {
    display: block;
    position: relative;
    padding: 28px 31px;
	text-decoration: none;
    text-transform: uppercase;
    text-shadow: 1px 1px 0 rgba(199,142,63,0.51);
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#cssmenu ul {
    list-style: none;
    z-index: 100;
}

#cssmenu > ul {
    float: left;
}

#cssmenu > ul > li {
    float: left;
}

#cssmenu > ul > li > a {
    font-size: 12px;
    line-height: 16px;
    color: #fff;
    font-weight: bold;
}

#aacssmenu > ul > li:hover:after {
    content: '';
    display: block;
    width: 0;
    height: 0;
    position: absolute;
    left: 50%;
    bottom: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #db000b;
    margin-left: -10px;
}

#cssmenu > ul > li:first-child > a {
}

#cssmenu > ul > li.active:after {
    content: '';
    display: block;
    width: 0;
    height: 0;
    position: absolute;
    bottom: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #db000b;
    margin-left: -10px;
}

#cssmenu > ul > li.active > a {
    font-size: 12px;
    line-height: 16px;
    color: #fff;
    font-weight: bold;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#cssmenu > ul > li:hover > a {
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#cssmenu .has-sub {
    z-index: 1;
}

#cssmenu .has-sub:hover > ul {
    display: block;
}

#cssmenu .has-sub ul {
    display: none;
    position: absolute;
    width: 165px;
    top: 190%;
}

#cssmenu .has-sub ul li {
    *margin-bottom: -1px;
}

#cssmenu .has-sub ul li a {
    background: #c2832d;
    //border-bottom: 1px dotted #ff0f1b;
    filter: none;
    font-size: 11px;
    display: block;
    line-height: 120%;
    padding: 10px;
    color: #ffffff;
}

#cssmenu .has-sub ul li:hover a {
    background: #fff;
    text-decoration: none;
    color: #c2832d;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#cssmenu .has-sub .has-sub:hover > ul {
    display: block;
}

#cssmenu .has-sub .has-sub ul {
    display: none;
    position: absolute;
    left: 100%;
    top: 0;
}

#cssmenu .has-sub .has-sub ul li a {
    background: #a80008;
}

#cssmenu .has-sub .has-sub ul li a:hover {
    color: #c2832d;
}

